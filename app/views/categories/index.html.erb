<p style="color: green"><%= notice %></p>

<h2 class="text-center card-title">Categories</h2>

<div class="container">
  <div class="row">
    <div id="categories">
      <% @categories.each do |category| %>
        <%= render category %>
        <p>
          <%= link_to "Show this category", category %>
        </p>
      <% end %>
      <%= link_to "New category", new_category_path, class: 'btn btn-secondary' %>

    </div>


  </div>
</div>